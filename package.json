{
  "name": "fullstack-template",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-scripts"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.19.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "stylelint": "^13.9.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.18.0",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "build": "lerna exec --parallel --babel --root-mode upward src -d lib --ignore **/*.stories.tsx",
    "story": "cd packages/components && yarn storybook",
    "start:client": "npm start --prefix packages/client",
    "start:server": "npm start --prefix packages/server",
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "test": "cd packages/client && yarn test",
    "typecheck": "lerna run typecheck --parallel",
    "eslint": "eslint 'packages/**/src/**/*.{ts,tsx}' --fix",
    "stylelint": "stylelint packages/**/*.scss' --fix"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn typecheck && yarn test && lint-staged"
    }
  }
}
